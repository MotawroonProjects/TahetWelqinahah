<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.lost_found_it.model.SliderModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:riv_corner_radius="16dp"
            app:riv_border_width="0dp"
            android:src="@drawable/test"
            android:scaleType="centerCrop"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/pin"
            app:layout_constraintBottom_toTopOf="@id/pin"
            app:layout_constraintEnd_toEndOf="@id/tvAddress"
            android:layout_marginBottom="8dp"
            android:lines="1"
            android:ellipsize="end"
            android:maxEms="12"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/font_bold"
            android:text="iphone 13 Pro Max Dual sim"


            />

        <ImageView
            android:id="@+id/pin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp"
            android:src="@drawable/ic_pin"
            />
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/pin"
            app:layout_constraintTop_toTopOf="@id/pin"
            app:layout_constraintBottom_toBottomOf="@id/pin"
            android:lines="1"
            android:ellipsize="end"
            android:maxEms="12"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/font_regular"
            android:text="Cairo - Egypt - Ittihad Street"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>